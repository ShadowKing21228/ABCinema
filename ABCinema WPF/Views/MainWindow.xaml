<mah:MetroWindow x:Class="ABCinema_WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Главная страница" Background="#2E2E2E" Icon="pack://application:,,,/Resources/Images/Icons/ticketWindow.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- для шапки -->
            <ColumnDefinition Width="*"/>    <!-- для контента -->
        </Grid.ColumnDefinitions>
        <mah:HamburgerMenu x:Name="MainMenu"
                           DisplayMode="CompactInline"
                           IsPaneOpen="False"
                           PaneBackground="#1C1C1C"
                           ItemsSource="{Binding MenuItems, UpdateSourceTrigger=PropertyChanged}"
                           SelectedIndex="0"
                           ItemInvoked="MainMenu_OnItemInvoked"
                           CompactPaneLength="50">
            <mah:HamburgerMenu.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Glyph, UpdateSourceTrigger=PropertyChanged}" FontSize="32" TextAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}" FontSize="24"/>
                    </StackPanel>
                </DataTemplate>
            </mah:HamburgerMenu.ItemTemplate>
            
            <mah:HamburgerMenu.Content>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </mah:HamburgerMenu.Content>
        </mah:HamburgerMenu>
    </Grid>
</mah:MetroWindow>
