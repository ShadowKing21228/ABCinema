<mah:CustomDialog x:Class="ABCinema_WPF.Controls.CinemaDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ABCinema_WPF.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
    <StackPanel Margin="20">
        <TextBlock Text="Название фильма" Foreground="White"/>
        <TextBox x:Name="CinemaNameBox" Margin="0,5" />

        <TextBlock Text="Описание" Foreground="White"/>
        <TextBox x:Name="DescriptionBox" Margin="0,5" />

        <TextBlock Text="Жанры" Foreground="White"/>
        <Button Content="Выбрать жанры"
                FontSize="16"
                Margin="0,5"
                Command="{Binding ToggleGenreFlyoutCommand}"
                Click="ForceOpenFlyout"
                CommandParameter="{Binding}"/>

        <TextBlock Text="Выбранные жанры:" Foreground="White" Margin="0,5"/>
        <ItemsControl ItemsSource="{Binding SelectedGenres}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Foreground="White" Margin="2"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Text="Длительность в минутах" Foreground="White"/>
        <TextBox x:Name="DurationMinutesBox" Margin="0,5" />

        <TextBlock Text="Рейтинг" Foreground="White"/>
        <TextBox x:Name="RatingBox" Margin="0,5" />

        <TextBlock Text="Изображение" Foreground="White"/>
        <Button Content="Выбрать изображение" Click="SelectImage_Click" Margin="0,5"/>
        <Image x:Name="PosterPreview" Height="150" Margin="0,5"/>

        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Content="Назад"
                    Command="{Binding CloseCinemaDialogCommand}"
                    CommandParameter="{Binding}"
                    HorizontalAlignment="Left"
                    Grid.Column="0" />

            <Button Content="ОК"
                    Command="{Binding AddCinemaCommand}"
                    CommandParameter="{Binding}"
                    HorizontalAlignment="Right"
                    Grid.Column="1" />
        </Grid>
    </StackPanel>

    <!-- Flyout для выбора жанров -->
    <mah:FlyoutsControl>
        <mah:Flyout x:Name="GenreFlyout"
                    Position="Right"
                    Header="Выбор жанров"
                    IsOpen="{Binding IsGenreFlyoutOpen, Mode=TwoWay}"
                    Width="300"
                    IsModal="True">
            <ListBox x:Name="GenreListBox"
                     ItemsSource="{Binding AllGenres}"
                     DisplayMemberPath="Name"
                     SelectionMode="Multiple"
                     SelectionChanged="GenreListBox_SelectionChanged"
                     Height="150"
                     Margin="0,5"
                     Background="{DynamicResource AccentColorBrush}"
                     Foreground="White"/>

        </mah:Flyout>
    </mah:FlyoutsControl>
</Grid>

</mah:CustomDialog>
