<mah:CustomDialog x:Class="ABCinema_WPF.Controls.CinemaUpdateDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ABCinema_WPF.Controls"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название фильма" Foreground="White"/>
            <TextBox x:Name="CinemaNameBox" Margin="0,5" />

            <TextBlock Text="Описание" Foreground="White"/>
            <TextBox x:Name="DescriptionBox" Margin="0,5" />
        
            <TextBlock Text="Длительность в минутах" Foreground="White"/>
            <TextBox x:Name="DurationMinutesBox" Margin="0,5" />
        
            <TextBlock Text="Рейтинг" Foreground="White"/>
            <TextBox x:Name="RatingBox" Margin="0,5" />
        
            <TextBlock Text="Изображение" Foreground="White"/>
            <Button Content="Выбрать изображение" Click="SelectImage_Click" Margin="0,5"/>
            <Image x:Name="PosterPreview" Height="150" Margin="0,5"/>
            
        
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Content="Назад"
                        Command="{Binding CloseUpdateCinemaDialogCommand}"
                        CommandParameter="{Binding}"
                        HorizontalAlignment="Left"
                        Grid.Column="0" />

                <Button Content="ОК"
                        Command="{Binding UpdateCinemaCommand}"
                        CommandParameter="{Binding}"
                        HorizontalAlignment="Right"
                        Grid.Column="1" />
            </Grid>
        
        </StackPanel>
    </Grid>
</mah:CustomDialog>
